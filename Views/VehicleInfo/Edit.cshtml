@model TMS1.Models.VehicleInfo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="CreateAllocation">Edit Vehicle Information</h1>

<hr />
<div style="font-size:medium" class="row">
    <div class="col-md-4"></div>
    <div id="edit" class="col-md-4">
       <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleId" />
            <div class="form-group">
                <label asp-for="VehicleCapacity" class="control-label"></label>
                <input asp-for="VehicleCapacity" class="form-control" />
                <span asp-validation-for="VehicleCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatAvailablity" class="control-label"></label>
                <input asp-for="SeatAvailablity" class="form-control" />
                <span asp-validation-for="SeatAvailablity" class="text-danger"></span>
            </div>
            <br />
            <div style ="text-align:center" class="form-group">
                <input id="edit" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
