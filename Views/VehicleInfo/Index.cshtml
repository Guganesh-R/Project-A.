@model IEnumerable<TMS1.Models.VehicleInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .Headings {
        font-family: 'Times New Roman';
        text-align: center;
        color: black;
    }

    table, th, td {
        border: 3px solid black !important;
        border-collapse: collapse;
    }
    /* table,tr,th
        {
            color: black !important;
        }*/

</style>

<h1 class="Headings">Vehicle Information</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered" id="allocate">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatAvailablity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleCapacity)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.SeatAvailablity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VehicleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VehicleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VehicleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
