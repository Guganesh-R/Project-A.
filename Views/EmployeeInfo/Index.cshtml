@model IEnumerable<TMS1.Models.EmployeeInfo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .Headings
    {
        font-family:'Times New Roman';
        text-align:center;
        color:black;
    }
    table, th, td 
    {
        border: 3px solid black !important;
        border-collapse: collapse;
    }

 </style>
<h1 class="Headings">Employee Information</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered " id="allocate">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.EmployeeAdress)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.EmployeeAge)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.VehicleInfo.VehicleId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeAdress)
            </td>
                <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.EmployeeAge)
            </td>
                <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.VehicleInfo.VehicleId)
            </td>
               
            <td style="text-align:center">
                    <div class="editor" >
                <a asp-action="Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
   
</table>
