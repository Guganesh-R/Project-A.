<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Sundara Travels</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TMS1.styles.css" asp-append-version="true" />
    <style>
        .navbar-expand-sm {
            /*height: 100px;*/
            background-color: transparent;
        }
         #title
        {
            font-family:'Times New Roman';
            /*position:relative;*/
            /*right:490px;*/
            font-size:30px;
        }
        #login
        {
            font-family:'Times New Roman';
            font-size:20px;
            /*margin-right:10px;*/
        }
        #EVR
        {
            font-family:'Times New Roman';
            font-size:20px;
            margin-left:5px;
            opacity:100%;
         }

    </style>
</head>
<body id="layout">
    <div class="container-fluid">
    <header>
      
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
        
            <div class="container-fluid col-md-5">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Allocate" asp-action="Index">
                        <img src="~/css/sundra_travels-removebg-preview (1).png" height="60" width="140" />
                    </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                    <div id="EVR"  class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="RouteInfo" asp-action="Index">Route</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="VehicleInfo" asp-action="Index">Vehicle</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="EmployeeInfo" asp-action="Index">Employee</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Allocate" asp-action="Create">Allocation</a>
                            </li>
                    </ul>
                </div>
            </div>
                
        
     
        <div class="container-fluid col-sm-7" >
                <b>
                        <a class="navbar-brand" id="title" style="color:#ef2d06" asp-area="" asp-controller="Home" asp-action="Index">Sundara Travels</a>
                </b>
                 
           
                <div class="container col-sm-4"></div>
                <div class="container col-sm-2">
                <div id="login" class="navbar-collapse collapse d-sm-inline-flex justify-content-between"> 
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                                    <a class="nav-link text-dark " id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                        <li class="nav-item">
                                    <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                    </ul>
                </div>
               </div>
            </div>
        </nav>
    </header>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="border-top footer text-muted">
        <div class="container text-dark">
            Transport Managemnt System - <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"> Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
